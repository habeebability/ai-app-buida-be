# AI App Builder - Environment Configuration

# ===== SERVER CONFIGURATION =====
NODE_ENV=development
PORT=5001
API_URL=http://localhost:5001

# ===== MONGODB CONFIGURATION =====
MONGODB_URI=mongodb://localhost:27017/ai-app-builder

# ===== JWT CONFIGURATION =====
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# ===== SESSION CONFIGURATION =====
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# ===== GOOGLE OAUTH CONFIGURATION =====
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5001/api/auth/google/callback

# ===== GITHUB OAUTH CONFIGURATION =====
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:5001/api/auth/github/callback

# ===== EMAIL CONFIGURATION (RESEND) =====
RESEND_API_KEY=your-resend-api-key
FROM_EMAIL=noreply@aiappbuilder.com

# ===== AI/LLM SERVICE CONFIGURATION =====
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# ===== FRONTEND URL (FOR CORS) =====
FRONTEND_URL=http://localhost:3000

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== SECURITY =====
BCRYPT_ROUNDS=12

# ===== FILE STORAGE =====
# For storing generated project files temporarily
TEMP_DIR=./temp
MAX_FILE_SIZE=10mb
CLEANUP_INTERVAL=3600000

# ===== COMPONENT REGISTRY =====
# Default component repository
DEFAULT_COMPONENT_REPO=https://api.github.com/repos/aiappbuilder/components
COMPONENT_CACHE_TTL=3600

# ===== INTEGRATION SETTINGS =====
INTEGRATION_TIMEOUT=30000
MAX_INTEGRATIONS_PER_PROJECT=10

# ===== QUALITY ASSURANCE =====
ESLINT_TIMEOUT=60000
TYPE_CHECK_TIMEOUT=120000
MIN_QUALITY_SCORE=70

# ===== LOGGING =====
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ===== OPTIONAL: CLOUDINARY (FOR FILE UPLOADS) =====
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# ===== OPTIONAL: REDIS (FOR CACHING) =====
# REDIS_URL=redis://localhost:6379
# REDIS_TTL=3600

# ===== OPTIONAL: ANALYTICS =====
# ANALYTICS_ENABLED=false
# ANALYTICS_KEY=your-analytics-key

# ===== OPTIONAL: MONITORING =====
# SENTRY_DSN=your-sentry-dsn
# HEALTH_CHECK_INTERVAL=30000

# ===== DEVELOPMENT ONLY =====
# Set to true to enable mock AI responses (for testing without OpenAI API)
MOCK_AI_RESPONSES=false

# Enable detailed logging for debugging
DEBUG_MODE=false

# Skip email verification in development
SKIP_EMAIL_VERIFICATION=true

# Allow insecure connections in development
ALLOW_INSECURE=true
